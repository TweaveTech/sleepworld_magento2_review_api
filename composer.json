{
    "name": "tweave/magento2-review-api",
    "type": "magento2-module",
    "description": "Review API Magento 2 Extension",
    "require": {
        "php": "^8.0.0",
        "magento/framework": "^102.0.0",
        "magento/module-review": "^102.0.0",
        "magento/module-customer": "^102.0.0",
        "magento/module-store": "^102.0.0",
        "magento/module-catalog": "^102.0.0"
    },
    "autoload": {
        "psr-4": {
            "TweaveTech\\ReviewApi\\": "src/"
        },
        "files": [
            "registration.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true
    }
}